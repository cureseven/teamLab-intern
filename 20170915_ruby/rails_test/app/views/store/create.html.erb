<div class="container" style="margin-top:3em;">
    
    <div class="row">
        
        <div class="col-sm-4 col-sm-offset-4">
            
            <div class="jumbotron">
                
                <div class="form-group">
                    <label for="store_id">店舗ID</label>
                    <%= @store[:id] %>
                </div>
                
                <div class="form-group">
                    <label for="store_name">店舗名</label>
                    <%= @store[:name] %>
                </div>
                
                <div class="form-group">
                    <label for="store_phone">電話番号</label>
                    <%= @store[:phone] %>
                </div>
                
                <div class="form-group">
                    <label for="store_image">店舗写真</label>
                    <%= image_tag("/image/show/#{@store[:image_id]}", :class => "img-responsive") %>
                </div>

            </div>
            
            <div>
             <p>
              上記内容で登録しました
             </p>
            </div>
            
        </div>
        
    </div>
    
</div>
