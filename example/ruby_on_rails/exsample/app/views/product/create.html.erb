<!--新規登録フォーム-->
<div class="container" style="margin-top:3em;">
    
    <div class="row">
        
        <div class="col-sm-4 col-sm-offset-4">
            
            <div class="jumbotron">
                
                <div class="form-group">
                    <label for="product_id">商品ID</label>
                    <%= @product[:id] %>
                </div>
                
                <div class="form-group">
                    <label for="product_name">商品タイトル</label>
                    <%= @product[:title] %>
                </div>
                
                <div class="form-group">
                    <label for="product_description">商品説明</label>
                    <%= @product[:description] %>
                </div>
                
                <div class="form-group">
                    <label for="product_price">価格</label>
                    <%= @product[:price] %>
                </div>
                
                <div class="form-group">
                    <label for="product_image">店舗写真</label>
                    <%= image_tag("/image/show/#{@product[:image_id]}", :class => "img-responsive") %>
                </div>

            </div>
            
            <div>
             <p>
              上記内容で登録しました
             </p>
            </div>
            
        </div>
        
    </div>
    
</div>
