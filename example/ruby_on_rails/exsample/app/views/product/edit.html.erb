<!--変更フォーム-->
<div class="container" style="margin-top:3em;">
    
    <div class="row">
        
        <div class="col-sm-4 col-sm-offset-4">
            
            <div class="jumbotron">
                
                <%= form_for @product,:url => {:action => :update } do |f| %>
                <p>商品情報変更</p>
                 <div class="form-group">
                    <label for="product_id">商品ID</label>
                    <%= f.text_field :id, class: "form-control" %>
                  </div>
                 <div class="form-group">
                    <label for="product_name">商品名</label>
                    <%= f.text_field :title, class: "form-control" %>
                  </div>
                   
                  <div class="form-group">
                    <label for="product_description">説明文</label>
                    <%= f.text_field :description, class: "form-control" %>
                  </div>
                  
                  <div class="form-group">
                    <label for="product_price">価格</label>
                    <%= f.text_field :price, class: "form-control" %>
                  </div> 
                  
                  <div class="form-group">
                    <label for="product_image">商品写真</label>
                    <%= f.file_field :file, accept: "image/jpeg" %>
                  </div> 
                  
                 <button type="submit">登録</button>
                 
                <% end %>            
            
            </div>
            
        </div>
        
    </div>
    
</div>
